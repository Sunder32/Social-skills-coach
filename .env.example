# ===========================================
# Social Skills Coach - Environment Variables
# ===========================================

# Application
APP_NAME=Social Skills Coach
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Backend Server
BACKEND_HOST=localhost
BACKEND_PORT=8000

# Database - SQLite (default) or MySQL
DB_TYPE=sqlite
# MySQL settings (if DB_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=12345678
MYSQL_DATABASE=social_skills_coach

# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AI API Settings (DASA AI Server)
# URL of the DASA AI API server
AI_API_URL=http://localhost:8100/api/v1
# API key for authentication (must match AI_API_KEY on DASA server)
AI_API_KEY=your-secret-api-key-here
# Request timeout in seconds
AI_API_TIMEOUT=60

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=txt,docx,pdf

# Frontend
VITE_API_URL=http://localhost:8000/api
